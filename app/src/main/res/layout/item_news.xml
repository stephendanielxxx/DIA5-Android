<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivNews"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dani"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ivNews"
        app:layout_constraintBottom_toBottomOf="@id/ivNews"
        app:layout_constraintStart_toEndOf="@id/ivNews"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textColor="@color/black_2C2E31"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivNews"
            app:layout_constraintTop_toTopOf="@id/ivNews"
            tools:text="Headline News Hari Ini" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/black_2C2E31"
            android:textSize="@dimen/font_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivNews"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini Headline News Hari Ini" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivNews"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/font_small"
        tools:text="Total view : 50x"/>

</androidx.constraintlayout.widget.ConstraintLayout>