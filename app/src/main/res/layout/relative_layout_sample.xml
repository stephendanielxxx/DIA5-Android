<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/rl1"
        android:layout_marginTop="12dp"
        android:background="#E071BC">

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl3"
        android:layout_marginTop="12dp"
        android:background="#DFEC9F" />

    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/rl5"
        android:layout_alignParentEnd="true"
        android:background="#DFEC9F" />

    <RelativeLayout
        android:id="@+id/rl7"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/rl5"
        android:layout_toEndOf="@id/rl5"
        android:background="#5C3659" />

    <RelativeLayout
        android:id="@+id/rl8"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/rl6"
        android:layout_toStartOf="@id/rl6"
        android:background="#5C3659" />

</RelativeLayout>